
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TrailerAPPv3.Models.RegisterViewModel

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
<div class="container d-flex justify-content-center align-items-center" >
    <div class="card shadow p-4" style="width: 350px; border-radius: 10px;">
        <h2 class="text-center mb-4">Registro</h2>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            <div class="form-group mb-3">
                <label class="fw-bold">Nombre</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Ingresa tu nombre" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Correo electronico</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Ingresa tu correo electronico" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Contraseña</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Ingresa tu contraseña" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Confirma tu contraseña</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirma tu contraseña" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-success w-100" style="border-radius: 5px; font-weight: bold;">Registrar</button>
            </div>
        }
    </div>
</div>
}
