
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TrailerAPPv3.Models.LoginViewModel

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info">@ViewBag.Message</div>
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container d-flex justify-content-center align-items-center" style="min-height: 70%">
        <div class="card shadow p-4" style="width: 350px; border-radius: 10px;">
            <h2 class="text-center mb-4">Inicio de sesión</h2>

            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                <div class="form-group mb-3">
                    <label class="fw-bold">Correo Electronico</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Ingresa tu correo" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    <label class="fw-bold">Contraseña</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Ingresa tu contraseña" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary w-100" style="border-radius: 5px; font-weight: bold;">Ingresar</button>
                </div>
            }
        </div>
    </div>


}